{

    "render-resolution": [720, 480],
    "save-render-to-png": true,
    "png-output-location": "./img",
    "realtime-display": true,

    "camera-position": [-6.0, 10.0, -10.0],
    "camera-pitch": -0.4,
    "camera-yaw": -1.1,

    "antialiasing": true,
    "antialiasing-multiplier": 8,

    "multithreaded-render": true,
    "verbose-console": false,

    "global-illumination": false,
    "global-illumination-bounces": 1,
    "global-illumination-scatters": 3,
    "inverse-square-law-constant": 1.0,


}